<% users.sort((a,b)=> (a.name > b.name) ? 1 : ((b.name > a.name) ? -1 : 0)) %>
    <% for (var i=0 ; i<users.length ; i++ ) { %>

        <tr>
            <td>
                <%= i + 1 %>
            </td>
            <td>
                <%= users[i].name %>
            </td>
            <td>
                <%= users[i].email %>
            </td>

            <td>
                <%= users[i].number %>
            </td>
            <td>
                <%= users[i].gender %>
            </td>

            <% if(users[i].isBlocked) { %>
                <form action="/admin/status/<%= users[i]._id%>?_method=patch" method="post">
                    <td>
                        <button onclick="Unblock()" type="submit" class="btn btn-danger">Unblock</button>
                    </td>
                </form>
                <% } else { %>
                    <form action="/admin/status/<%= users[i]._id%>?_method=patch" method="post">
                        <td>
                            <button onclick="block()" type="submit" class="btn btn-success">Block</button>
                        </td>
                    </form>
                    <% } %>
                        </td>

        </tr>

        <% } %>

            <script>
                function block() {
                    Swal.fire({
                        position: 'top-end',
                        icon: 'success',
                        title: 'User Blocked Successfully',
                        showConfirmButton: false,
                        
                    })
                }
                function Unblock() {
                    Swal.fire({
                        position: 'top-end',
                        icon: 'success',
                        title: 'User Unblocked Successfully',
                        showConfirmButton: false,
                        
                    })
                 
                }
            </script>
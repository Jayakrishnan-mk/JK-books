<%-include ("../include/_header") %>

<section>
    <div class="container mt-4">
        <div class="row">

            <div class="col-md-6">
               
        
                <h2 class="text-center">Add Product</h2>

                <form action="/admin/admin-products" method="post" enctype="multipart/form-data">
                    <label for="">Name</label>
                    <input type="text" name="name" class="form-control">

                    <label for="">Author</label>
                    <input type="text" name="author" class="form-control">

                    <div class="m-2">
                        <label for="categoryOptions" class="form-label">Category :</label>
                        <select id="categoryOptions" name="category">
                          <% for ( let i=0; i < category.length; i++){ %>
                            <% console.log(category[i].name) %>
                              <option value="<%=category[i].name%>">
                                <%=category[i].name%>
                              </option>
                              <% } %>
                        </select>
                      </div>


                    <label for="">Price</label>
                    <input type="text" name="price" class="form-control">

                    <label for="">Quantity</label>
                    <input type="number" name="quantity" class="form-control">

                    <label for="">Description</label>
                    <input type="text" name="description" class="form-control">

                    <label for="">Image</label>
                    <input name ="image" type="file" class="form-control">
 
                    <button style="color: white; background-color: black; border: none;" type="submit" class="btn btn-info mt-4">Submit</button>

                </form>
            </div>

        </div>
    </div>
</section>

        

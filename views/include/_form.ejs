<form action="/admin/create-user" id="add_user" method="post">
    <div class="new_user">
        <div class="form-group">
            <label for="name" >Name</label>
            <input type="hidden" name="id">
            <input type="text" name="name" placeholder="Jayakrishnan" required/>
        </div>
        <div class="form-group">
            <label for="Email" >Email</label>
            <input type="text" name="email" placeholder="hello@gmail.com" required/>
        </div>
        <div class="form-group">
            <label for="Email" >Password</label><br>
            <input type="password" name="password" placeholder="" required/>
        </div>
        <div class="form-group">
            <label for="number" >Ph no:</label><br>
            <input type="tel" name="number" placeholder="" required/>
        </div>
        <div class="form-group">
            <label for="Gender" >Gender</label>
            <div class="radio inline">
                <input type="radio" name="gender" value="Male">
                <label for="gender" >Male</label>
            </div>
            <div class="radio inline">
                <input type="radio" name="gender" value="Female">
                <label for="gender" >Female</label>
            </div>

           

            <div class="form-group">
                <a href="">
                    <!-- onclick="confirm('Account created successfully.')" -->
                    <button type="submit" class="btn text-white update">Save</button>
                </a>
            </div>
        </div>
    </div>
</form>
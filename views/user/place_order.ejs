<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>JK Books</title>
    <link rel="icon" type="image/x-icon" href="img/jklogo.jpg">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <link rel="stylesheet" href="css/place-order.css">
</head>

<link rel="stylesheet" href="css/cartcss.css">

<body>


    <nav class="prod-nav">
        <a href="/"><h2 class="prod-head" style="width: 20%"> JK Books</h2></a>
        <a href="/">
            <h5 style="margin-left: 85rem; margin-top: 1rem; color: white; font-size: 12px; font-weight: bold;">Home</h5>
        </a>
    </nav>


    <section>
        <div class="container mt-5">
            <form action="" id="checkout-form" method="post">
                <div class="row">
                    <div class="col-md-6">
                        <h2>Enter Delivery Details</h2><br>
                        <p class="alter alert-danger">
                            <%= error %>
                        </p>
                        <div>
                            <label for="">Name</label>
                            <input class="form-control" type="text" id="name" name="name"><br>
                            <label for="">Address</label>
                            <input class="form-control" type="text" id="address" name="address"><br>
                            <label for="">Pincode</label>
                            <input class="form-control" type="text" id="pincode" name="pincode"><br>
                            <label for="">Mobile</label>
                            <input class="form-control" type="text" id="mobile" name="mobile"><br>
                            <input type="hidden" name="total" value="<%= total %>">
                        </div>
                    </div>
                    <div class="col-md-4" style="margin-left: 10rem">
                        <div class="container mt-5 ml-5 checkout">
                            <h5>Total Amount:Rs.<%= total %>
                            </h5>
                            <hr>
                            <div class="payment">
                                <p>Payment method</p>
                                <label class=" radio-inline">
                                    <input type="radio" name="paymentMethod" value="COD" checked> COD </label>

                                <label class="radio-inline mt-2">
                                    <input type="radio" name="paymentMethod" value="ONLINE"> Online payment
                                </label>
                                <button class="btn btn-primary float-right" style="margin-top: 2rem;"
                                    type="submit">Checkout</button>

                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </section>


    <script src="https://checkout.razorpay.com/v1/checkout.js"></script>


    <script>
        $('#checkout-form').submit(function (e) {
            e.preventDefault();
            // console.log('hhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhh');
            $.ajax({
                url: '/checkout',
                type: 'post',
                data: $('#checkout-form').serialize(),
                success: function (data) {
                    // console.log('lllllllllllllllll', data);
                    // alert("data  alert coming");
                    if (data.error) {
                        location.href = `/place-order-validationError/${data.total}/${data.error}`;
                    } 
                    else if (data.codSuccess) {
                        // console.log('lllllllllll');
                        location.href = '/order-success';
                    } 
                    else {
                        // console.log('kkkkkkkkkkkkkkkkkkkk');
                        razorpayPayment(data);
                    }
                }
            })
        })

        function razorpayPayment(order) {
            console.log('order+++++++++++++++++++++++++++++++++++++++++++++++++++++', order.order.amount);

            var options = {
                "key": "rzp_test_ypSBEwW22pVLiL", // Enter the Key ID generated from the Dashboard
                "amount": order.order.amount , // Amount is in currency subunits. Default currency is INR. Hence, 50000 refers to 50000 paise
                "currency": "INR",
                "name": "JK Books",
                "description": "Test Transaction",
                "image": "https://example.com/your_logo",  //img/jklogo.jpg
                "order_id": order.order.id, //This is a sample Order ID. Pass the `id` obtained in the response of Step 1

                "handler": function (response) {
                    

                    // console.log('paymohjouihuhu+++++++++++++++++++++++++++++++++++++++++++++++++++++', payment, order);

                    verifyPayment(response, order);

                },
                "prefill": {
                    "name": "Gaurav Kumar",
                    "email": "gaurav.kumar@example.com",
                    "contact": "9999999999"
                },
                "notes": {
                    "address": "Razorpay Corporate Office"
                },
                "theme": {
                    "color": "#3399cc"
                }
            };
            // console.log('lllllllllllll');
            var rzp1 = new Razorpay(options);
            rzp1.open();
        }




        function verifyPayment(payment, order) {
            console.log('payment+++++++++++++++++++++++++++++++++++++++++++++++++++++', order);
            $.ajax({
                url: '/verify-payment',
                data: {
                    payment,
                    order
                },
                method: "post",
                success: (response) => {
                    // console.log('response+++++++++++++++++++++++++++++++++++++++++++++++++++++', response);
                    if(response) {
                        location.href = '/order-success';
                    }
                    else {
                        alert('Something went wrong');
                    }
                }

            });
        }


    </script>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"
        integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"
        integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13"
        crossorigin="anonymous"></script>
</body>

</html>